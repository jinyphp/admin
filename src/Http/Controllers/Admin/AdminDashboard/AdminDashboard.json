{
    "controllerClass": "\\Jiny\\Admin\\App\\Http\\Controllers\\Admin\\AdminDashboard\\AdminDashboard",
    "title": "관리자 대시보드",
    "subtitle": "시스템 전체 현황을 한눈에 확인하세요",
    "description": "실시간 시스템 모니터링과 통계를 제공합니다. 사용자 활동, 보안 알림, 시스템 리소스 사용량 등 주요 지표를 시각화하여 표시합니다.",
    "route": {
        "name": "admin.system.dashboard",
        "prefix": "admin/dashboard"
    },
    "template": {
        "layout": "jiny-admin::layouts.admin"
    },
    "widgets": {
        "stats": {
            "enabled": true,
            "position": "top",
            "columns": 4
        },
        "activities": {
            "enabled": true,
            "limit": 10,
            "position": "left"
        },
        "sessions": {
            "enabled": true,
            "limit": 5,
            "position": "right"
        },
        "security": {
            "enabled": true,
            "position": "right"
        },
        "charts": {
            "login_trend": {
                "enabled": true,
                "type": "line",
                "hours": 24
            },
            "browser_stats": {
                "enabled": true,
                "type": "doughnut"
            }
        }
    },
    "refresh": {
        "enabled": true,
        "interval": 60000
    }
}