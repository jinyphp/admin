{
    "controllerClass": "\\Jiny\\Admin\\App\\Http\\Controllers\\Admin\\AdminUser2fa\\AdminUser2fa",
    "title": "2차 인증 관리",
    "subtitle": "2FA(Two-Factor Authentication) 설정 관리",
    "description": "사용자의 2차 인증 설정을 관리합니다.",
    "route": {
        "name": "admin.system.user.2fa",
        "prefix": "admin.system.user.2fa",
        "actions": {
            "index": "index",
            "create": "create",
            "store": "store",
            "show": "show",
            "edit": "edit",
            "update": "update",
            "destroy": "destroy"
        }
    },
    "table": {
        "name": "users",
        "model": "\\Jiny\\Admin\\Models\\User",
        "primaryKey": "id",
        "timestamps": true,
        "softDeletes": false,
        "where": {
            "default": [],
            "conditions": []
        },
        "casts": {
            "enable": "boolean"
        }
    },
    "template": {
        "layout": "jiny-admin::layouts.admin",
        "index": "jiny-admin::template.index",
        "show": "jiny-admin::template.show",
        "create": "jiny-admin::template.create",
        "edit": "jiny-admin::admin.admin_user2fa.edit"
    },
    "index": {
        "tableLayoutPath": "jiny-admin::template.livewire.admin-table",
        "tablePath": "jiny-admin::admin.admin_user2fa.table",
        "searchLayoutPath": "jiny-admin::template.livewire.admin-search",
        "searchFormPath": "jiny-admin::admin.admin_user2fa.search",
        "searchable": [
            "title",
            "description"
        ],
        "sortable": [
            "id",
            "title",
            "enable",
            "pos",
            "created_at",
            "updated_at"
        ],
        "filterable": [
            "enable"
        ],
        "heading": {
            "title": "2차 인증 사용자 목록",
            "description": "2FA가 설정된 사용자를 관리합니다"
        },
        "features": {
            "enableCreate": false,
            "enableDelete": false,
            "enableEdit": true,
            "enableSearch": true,
            "enableSort": true,
            "enablePagination": true,
            "enableBulkActions": true,
            "enableExport": false,
            "enableImport": false,
            "enableStatusToggle": true,
            "enableSettingsDrawer": true
        },
        "pagination": {
            "perPage": 20,
            "perPageOptions": [10, 25, 50, 100]
        },
        "sorting": {
            "default": "created_at",
            "direction": "desc"
        },
        "search": {
            "placeholder": "사용자 검색 (이름, 이메일)...",
            "debounce": 300
        },
        "filters": {
            "enable": {
                "label": "상태",
                "options": {
                    "": "전체",
                    "1": "활성",
                    "0": "비활성"
                }
            }
        },
        "table": {
            "columns": {
                "checkbox": {
                    "visible": true,
                    "width": "50px"
                },
                "id": {
                    "label": "ID",
                    "visible": true,
                    "sortable": true,
                    "width": "80px"
                },
                "name": {
                    "label": "이름",
                    "visible": true,
                    "sortable": true,
                    "searchable": true
                },
                "email": {
                    "label": "이메일",
                    "visible": true,
                    "sortable": true,
                    "searchable": true
                },
                "two_factor_enabled": {
                    "label": "2FA 상태",
                    "visible": true,
                    "sortable": true,
                    "toggleable": true
                },
                "two_factor_confirmed_at": {
                    "label": "2FA 설정일",
                    "visible": true,
                    "sortable": true,
                    "responsive": "md",
                    "format": "Y-m-d H:i"
                },
                "last_2fa_used_at": {
                    "label": "마지막 사용",
                    "visible": true,
                    "sortable": true,
                    "responsive": "md",
                    "format": "Y-m-d H:i"
                },
                "created_at": {
                    "label": "생성일",
                    "visible": true,
                    "sortable": true,
                    "responsive": "md",
                    "format": "Y-m-d"
                },
                "actions": {
                    "label": "작업",
                    "visible": true,
                    "width": "150px"
                }
            }
        }
    },
    "create": {
        "buttonText": "2FA 설정",
        "enabled": false,
        "heading": {
            "title": "새 2FA 설정",
            "description": "시스템에 새로운 2FA 설정을 추가합니다"
        },
        "enableContinueCreate": true,
        "enableListButton": true,
        "enableSettingsDrawer": true,
        "createLayoutPath": "jiny-admin::template.livewire.admin-create",
        "formPath": "jiny-admin::admin.admin_user2fa.create",
        "formLayout": "vertical"
    },
    "edit": {
        "heading": {
            "title": "2FA 설정 수정",
            "description": "2FA 설정 정보를 수정합니다"
        },
        "enableDelete": true,
        "enableListButton": true,
        "enableDetailButton": true,
        "enableSettingsDrawer": true,
        "editLayoutPath": "jiny-admin::template.livewire.admin-edit",
        "formPath": "jiny-admin::admin.admin_user2fa.edit",
        "formLayout": "vertical"
    },
    "show": {
        "heading": {
            "title": "2FA 설정 상세",
            "description": "2FA 설정 정보를 확인합니다"
        },
        "enableEdit": true,
        "enableDelete": true,
        "enableCreate": true,
        "enableListButton": true,
        "enableSettingsDrawer": true,
        "showLayoutPath": "jiny-admin::template.livewire.admin-show",
        "showPath": "jiny-admin::admin.admin_user2fa.show",
        "display": {
            "datetimeFormat": "Y-m-d H:i:s",
            "booleanLabels": {
                "true": "활성",
                "false": "비활성"
            }
        }
    },
    "destroy": {
        "enableSoftDelete": false,
        "enableTransaction": true,
        "requireConfirmation": true,
        "confirmation": {
            "message": "이 2FA 설정을 삭제하시겠습니까?"
        },
        "messages": {
            "success": "2FA 설정이 삭제되었습니다.",
            "error": "2FA 설정 삭제 중 오류가 발생했습니다: %s",
            "confirmRequired": "삭제 확인이 필요합니다."
        }
    },
    "store": {
        "enableTransaction": true,
        "defaults": {
            "enable": true,
            "pos": 0
        },
        "fillable": [
            "enable",
            "title",
            "description",
            "pos"
        ],
        "messages": {
            "success": "2FA 설정이 생성되었습니다.",
            "error": "2FA 설정 생성 중 오류가 발생했습니다.",
            "continueSuccess": "2FA 설정이 생성되었습니다. 계속 추가할 수 있습니다."
        },
        "validation": {
            "rules": {
                "title": "required|string|max:255",
                "description": "nullable|string",
                "enable": "boolean",
                "pos": "nullable|integer"
            },
            "messages": {
                "title.required": "제목은 필수입니다."
            }
        }
    },
    "update": {
        "enableTransaction": true,
        "trackChanges": true,
        "redirects": {
            "success": "show",
            "error": "edit"
        },
        "fillable": [
            "enable",
            "title",
            "description",
            "pos"
        ],
        "messages": {
            "success": "2FA 설정이 수정되었습니다.",
            "error": "2FA 설정 수정 중 오류가 발생했습니다."
        },
        "validation": {
            "rules": {
                "title": "required|string|max:255",
                "description": "nullable|string",
                "enable": "boolean",
                "pos": "nullable|integer"
            },
            "messages": {
                "title.required": "제목은 필수입니다."
            }
        }
    }
}