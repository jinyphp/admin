{
    "controllerClass": "\\Jiny\\Admin\\App\\Http\\Controllers\\Admin\\AdminUser2fa\\AdminUser2fa",
    "title": "2차 인증 관리",
    "subtitle": "2FA(Two-Factor Authentication) 설정 관리",
    "description": "사용자의 2차 인증 설정을 관리합니다.",
    "route": {
        "name": "admin.user.2fa",
        "prefix": "admin.user.2fa",
        "actions": {
            "index": "index",
            "create": "create",
            "store": "store",
            "show": "show",
            "edit": "edit",
            "update": "update",
            "destroy": "destroy"
        }
    },
    "table": {
        "name": "users",
        "model": "\\Jiny\\Admin\\Models\\User",
        "primaryKey": "id",
        "timestamps": true,
        "softDeletes": false,
        "where": {
            "default": [],
            "conditions": []
        },
        "casts": {
            "enable": "boolean"
        }
    },
    "template": {
        "layout": "jiny-admin::layouts.admin",
        "index": "jiny-admin::template.index",
        "show": "jiny-admin::template.show",
        "create": "jiny-admin::template.create",
        "edit": "jiny-admin::admin.admin_user2fa.edit"
    },
    "index": {
        "tableLayoutPath": "jiny-admin::template.livewire.admin-table",
        "tablePath": "jiny-admin::admin.admin_user2fa.table",
        "searchLayoutPath": "jiny-admin::template.livewire.admin-search",
        "searchFormPath": "jiny-admin::admin.admin_user2fa.search",
        "searchable": [
            "title",
            "description"
        ],
        "sortable": [
            "id",
            "title",
            "enable",
            "pos",
            "created_at",
            "updated_at"
        ],
        "filterable": [
            "enable"
        ],
        "heading": {
            "title": "2차 인증 사용자 목록",
            "description": "2FA가 설정된 사용자를 관리합니다"
        },
        "features": {
            "enableCreate": false,
            "enableDelete": false,
            "enableEdit": true,
            "enableSearch": true,
            "enableSort": true,
            "enablePagination": true,
            "enableBulkActions": true,
            "enableExport": false,
            "enableImport": false,
            "enableStatusToggle": true,
            "enableSettingsDrawer": true
        },
        "pagination": {
            "perPage": 20,
            "perPageOptions": [10, 25, 50, 100]
        },
        "sorting": {
            "default": "created_at",
            "direction": "desc"
        },
        "search": {
            "placeholder": "사용자 검색 (이름, 이메일)...",
            "debounce": 300
        },
        "filters": {
            "enable": {
                "label": "Status",
                "options": {
                    "": "All",
                    "1": "Enabled",
                    "0": "Disabled"
                }
            }
        },
        "table": {
            "columns": {
                "checkbox": {
                    "visible": true,
                    "width": "50px"
                },
                "id": {
                    "label": "ID",
                    "visible": true,
                    "sortable": true,
                    "width": "80px"
                },
                "name": {
                    "label": "이름",
                    "visible": true,
                    "sortable": true,
                    "searchable": true
                },
                "email": {
                    "label": "이메일",
                    "visible": true,
                    "sortable": true,
                    "searchable": true
                },
                "two_factor_enabled": {
                    "label": "2FA 상태",
                    "visible": true,
                    "sortable": true,
                    "toggleable": true
                },
                "two_factor_confirmed_at": {
                    "label": "2FA 설정일",
                    "visible": true,
                    "sortable": true,
                    "responsive": "md",
                    "format": "Y-m-d H:i"
                },
                "last_2fa_used_at": {
                    "label": "마지막 사용",
                    "visible": true,
                    "sortable": true,
                    "responsive": "md",
                    "format": "Y-m-d H:i"
                },
                "created_at": {
                    "label": "Created",
                    "visible": true,
                    "sortable": true,
                    "responsive": "md",
                    "format": "Y-m-d"
                },
                "actions": {
                    "label": "Actions",
                    "visible": true,
                    "width": "150px"
                }
            }
        }
    },
    "create": {
        "buttonText": "2FA 설정",
        "enabled": false,
        "heading": {
            "title": "Create New User2fa",
            "description": "Add a new user2fa to the system"
        },
        "enableContinueCreate": true,
        "enableListButton": true,
        "enableSettingsDrawer": true,
        "createLayoutPath": "jiny-admin::template.livewire.admin-create",
        "formPath": "jiny-admin::admin.admin_user2fa.create",
        "formLayout": "vertical"
    },
    "edit": {
        "heading": {
            "title": "Edit User2fa",
            "description": "Update user2fa information"
        },
        "enableDelete": true,
        "enableListButton": true,
        "enableDetailButton": true,
        "enableSettingsDrawer": true,
        "editLayoutPath": "jiny-admin::template.livewire.admin-edit",
        "formPath": "jiny-admin::admin.admin_user2fa.edit",
        "formLayout": "vertical"
    },
    "show": {
        "heading": {
            "title": "User2fa Details",
            "description": "View user2fa information"
        },
        "enableEdit": true,
        "enableDelete": true,
        "enableCreate": true,
        "enableListButton": true,
        "enableSettingsDrawer": true,
        "showLayoutPath": "jiny-admin::template.livewire.admin-show",
        "showPath": "jiny-admin::admin.admin_user2fa.show",
        "display": {
            "datetimeFormat": "Y-m-d H:i:s",
            "booleanLabels": {
                "true": "Enabled",
                "false": "Disabled"
            }
        }
    },
    "destroy": {
        "enableSoftDelete": false,
        "enableTransaction": true,
        "requireConfirmation": true,
        "confirmation": {
            "message": "Are you sure you want to delete this user2fa?"
        },
        "messages": {
            "success": "User2fa deleted successfully.",
            "error": "Error deleting user2fa: %s",
            "confirmRequired": "Delete confirmation required."
        }
    },
    "store": {
        "enableTransaction": true,
        "defaults": {
            "enable": true,
            "pos": 0
        },
        "fillable": [
            "enable",
            "title",
            "description",
            "pos"
        ],
        "messages": {
            "success": "User2fa created successfully.",
            "error": "Error creating user2fa.",
            "continueSuccess": "User2fa created. You can continue adding more."
        },
        "validation": {
            "rules": {
                "title": "required|string|max:255",
                "description": "nullable|string",
                "enable": "boolean",
                "pos": "nullable|integer"
            },
            "messages": {
                "title.required": "Title is required."
            }
        }
    },
    "update": {
        "enableTransaction": true,
        "trackChanges": true,
        "redirects": {
            "success": "show",
            "error": "edit"
        },
        "fillable": [
            "enable",
            "title",
            "description",
            "pos"
        ],
        "messages": {
            "success": "User2fa updated successfully.",
            "error": "Error updating user2fa."
        },
        "validation": {
            "rules": {
                "title": "required|string|max:255",
                "description": "nullable|string",
                "enable": "boolean",
                "pos": "nullable|integer"
            },
            "messages": {
                "title.required": "Title is required."
            }
        }
    }
}