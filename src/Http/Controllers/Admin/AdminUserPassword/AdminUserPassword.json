{
    "controllerClass": "\\Jiny\\Admin\\App\\Http\\Controllers\\Admin\\AdminUserPassword\\AdminUserPassword",
    "title": "패스워드 관리",
    "subtitle": "사용자 패스워드 만료 및 히스토리 관리",
    "description": "사용자 패스워드 만료 상태 및 변경 히스토리를 관리합니다.",
    "route": {
        "name": "admin.user.password",
        "prefix": "admin/user/password",
        "actions": {
            "index": "index",
            "show": "show"
        }
    },
    "table": {
        "name": "admin_password_logs",
        "model": "\\Jiny\\Admin\\App\\Models\\AdminPasswordLog",
        "primaryKey": "id",
        "timestamps": true,
        "softDeletes": false,
        "where": {
            "default": [],
            "conditions": []
        },
        "casts": {
            "changed_at": "datetime",
            "expires_at": "datetime",
            "last_used_at": "datetime"
        }
    },
    "template": {
        "layout": "jiny-admin::layouts.admin",
        "index": "jiny-admin::template.index",
        "show": "jiny-admin::template.show"
    },
    "index": {
        "tableLayoutPath": "jiny-admin::template.livewire.admin-table",
        "tablePath": "jiny-admin::admin.admin_user_password.table",
        "searchLayoutPath": "jiny-admin::template.livewire.admin-search",
        "searchFormPath": "jiny-admin::admin.admin_user_password.search",
        "searchable": [
            "user.name",
            "user.email",
            "change_reason"
        ],
        "sortable": [
            "id",
            "user_id",
            "changed_at",
            "expires_at",
            "is_expired",
            "is_temporary"
        ],
        "filterable": [
            "is_expired",
            "is_temporary"
        ],
        "heading": {
            "title": "패스워드 관리",
            "description": "사용자 패스워드 히스토리 및 만료 상태를 관리합니다"
        },
        "features": {
            "enableCreate": false,
            "enableDelete": false,
            "enableEdit": false,
            "enableSearch": true,
            "enableSort": true,
            "enablePagination": true,
            "enableBulkActions": false,
            "enableExport": true,
            "enableImport": false,
            "enableStatusToggle": false,
            "enableSettingsDrawer": true
        },
        "pagination": {
            "perPage": 20,
            "perPageOptions": [10, 20, 50, 100]
        },
        "sorting": {
            "default": "changed_at",
            "direction": "desc"
        },
        "search": {
            "placeholder": "이름, 이메일 또는 변경 사유로 검색...",
            "debounce": 300
        },
        "filters": {
            "is_expired": {
                "label": "만료 상태",
                "options": {
                    "": "전체",
                    "1": "만료됨",
                    "0": "활성"
                }
            },
            "is_temporary": {
                "label": "임시 패스워드",
                "options": {
                    "": "전체",
                    "1": "임시",
                    "0": "일반"
                }
            }
        },
        "table": {
            "columns": {
                "id": {
                    "label": "ID",
                    "visible": false,
                    "sortable": true,
                    "width": "80px"
                },
                "user": {
                    "label": "사용자",
                    "visible": true,
                    "sortable": true,
                    "searchable": true,
                    "linkRoute": "admin.users.show",
                    "linkParam": "user_id"
                },
                "changed_at": {
                    "label": "변경일시",
                    "visible": true,
                    "sortable": true,
                    "format": "Y-m-d H:i"
                },
                "expires_at": {
                    "label": "만료일시",
                    "visible": true,
                    "sortable": true,
                    "format": "Y-m-d H:i"
                },
                "is_expired": {
                    "label": "상태",
                    "visible": true,
                    "sortable": true,
                    "badge": true,
                    "badgeColors": {
                        "0": "green",
                        "1": "red"
                    },
                    "badgeLabels": {
                        "0": "활성",
                        "1": "만료"
                    }
                },
                "is_temporary": {
                    "label": "유형",
                    "visible": true,
                    "sortable": true,
                    "badge": true,
                    "badgeColors": {
                        "0": "gray",
                        "1": "yellow"
                    },
                    "badgeLabels": {
                        "0": "일반",
                        "1": "임시"
                    }
                },
                "usage_count": {
                    "label": "사용횟수",
                    "visible": true,
                    "sortable": true
                },
                "change_reason": {
                    "label": "변경사유",
                    "visible": true,
                    "responsive": "lg",
                    "truncate": 30
                },
                "actions": {
                    "label": "작업",
                    "visible": true,
                    "width": "100px"
                }
            }
        },
        "actions": {
            "show": {
                "label": "상세보기",
                "icon": "eye",
                "class": "text-blue-600 hover:text-blue-900"
            }
        }
    },
    "show": {
        "heading": {
            "title": "패스워드 히스토리 상세",
            "description": "패스워드 변경 히스토리 상세 정보"
        },
        "enableEdit": false,
        "enableDelete": false,
        "enableCreate": false,
        "enableListButton": true,
        "enableSettingsDrawer": true,
        "showLayoutPath": "jiny-admin::template.livewire.admin-show",
        "showPath": "jiny-admin::admin.admin_user_password.show",
        "sections": {
            "basic": {
                "title": "기본 정보",
                "fields": ["user", "changed_at", "expires_at", "change_reason"]
            },
            "status": {
                "title": "상태 정보",
                "fields": ["is_expired", "is_temporary", "usage_count", "last_used_at"]
            },
            "security": {
                "title": "보안 정보",
                "fields": ["changed_by_ip", "changed_by_user_agent", "strength_score", "strength_details"]
            },
            "timestamps": {
                "title": "타임스탬프",
                "fields": ["created_at", "updated_at"]
            }
        },
        "display": {
            "datetimeFormat": "Y-m-d H:i:s",
            "booleanLabels": {
                "true": "예",
                "false": "아니오"
            }
        }
    },
    "messages": {
        "expired": "패스워드가 만료되었습니다.",
        "extended": "패스워드 만료일이 연장되었습니다.",
        "reset": "임시 패스워드가 생성되었습니다.",
        "error": "요청 처리 중 오류가 발생했습니다."
    }
}