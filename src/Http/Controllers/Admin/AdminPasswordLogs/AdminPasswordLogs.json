{
    "controllerClass": "Jiny\\Admin\\App\\Http\\Controllers\\Admin\\AdminPasswordLogs\\AdminPasswordLogs",
    "title": "패스워드 보안 로그",
    "subtitle": "실패한 패스워드 시도 및 차단된 IP 모니터링",
    "description": "비밀번호 시도 로그 및 IP 차단 관리 시스템입니다. 실패한 로그인 시도를 추적하고 의심스러운 IP를 자동으로 차단합니다.",
    "route": {
        "name": "admin.system.user.password.logs",
        "prefix": "admin\/user\/password\/logs",
        "actions": {
            "index": "index",
            "show": "show",
            "unblock": "unblock"
        }
    },
    "table": {
        "name": "admin_password_logs",
        "model": "\\Jiny\\Admin\\Models\\AdminPasswordLog",
        "primaryKey": "id",
        "timestamps": true,
        "softDeletes": false,
        "where": {
            "default": [],
            "conditions": []
        },
        "casts": {
            "last_attempt_at": "datetime",
            "blocked_at": "datetime",
            "resolved_at": "datetime"
        }
    },
    "template": {
        "layout": "jiny-admin::layouts.admin",
        "index": "jiny-admin::template.index",
        "show": "jiny-admin::template.show"
    },
    "index": {
        "tableLayoutPath": "jiny-admin::template.livewire.admin-table",
        "tablePath": "jiny-admin::admin.admin_password_logs.table",
        "searchLayoutPath": "jiny-admin::template.livewire.admin-search",
        "searchFormPath": "jiny-admin::admin.admin_password_logs.search",
        "searchable": [
            "email",
            "ip_address",
            "browser"
        ],
        "sortable": [
            "id",
            "email",
            "ip_address",
            "attempt_count",
            "status",
            "last_attempt_at",
            "blocked_at"
        ],
        "filterable": [
            "status"
        ],
        "heading": {
            "title": "패스워드 보안 로그",
            "description": "실패한 비밀번호 시도 및 차단된 IP를 모니터링하고 관리합니다"
        },
        "features": {
            "enableCreate": false,
            "enableDelete": true,
            "enableEdit": false,
            "enableSearch": true,
            "enableSort": true,
            "enablePagination": true,
            "enableBulkActions": true,
            "enableExport": true,
            "enableImport": false,
            "enableStatusToggle": false,
            "enableSettingsDrawer": true,
            "enableUnblock": true
        },
        "pagination": {
            "perPage": "10",
            "perPageOptions": [
                10,
                20,
                50,
                100
            ]
        },
        "sorting": {
            "default": "last_attempt_at",
            "direction": "desc"
        },
        "search": {
            "placeholder": "이메일, IP 주소, 브라우저로 검색...",
            "debounce": 300
        },
        "filters": {
            "status": {
                "label": "상태",
                "options": {
                    "": "전체 상태",
                    "failed": "실패 시도",
                    "blocked": "차단된 IP",
                    "resolved": "해결됨"
                }
            },
            "attempt_count": {
                "label": "시도 횟수",
                "type": "range",
                "min": 1,
                "max": 100
            },
            "date_range": {
                "label": "날짜 범위",
                "type": "daterange"
            }
        },
        "table": {
            "columns": {
                "checkbox": {
                    "visible": true,
                    "width": "50px"
                },
                "id": {
                    "label": "ID",
                    "visible": false,
                    "sortable": true,
                    "width": "80px"
                },
                "email": {
                    "label": "이메일",
                    "visible": true,
                    "sortable": true,
                    "searchable": true,
                    "linkRoute": "admin.system.users.show",
                    "linkParam": "user_id"
                },
                "ip_address": {
                    "label": "IP 주소",
                    "visible": true,
                    "sortable": true,
                    "searchable": true
                },
                "browser": {
                    "label": "브라우저",
                    "visible": true,
                    "responsive": "lg",
                    "truncate": 30
                },
                "attempt_count": {
                    "label": "시도",
                    "visible": true,
                    "sortable": true,
                    "badge": true,
                    "badgeColors": {
                        "1-2": "gray",
                        "3-4": "yellow",
                        "5+": "red"
                    }
                },
                "status": {
                    "label": "상태",
                    "visible": true,
                    "sortable": true,
                    "badge": true,
                    "badgeColors": {
                        "failed": "yellow",
                        "blocked": "red",
                        "resolved": "green"
                    }
                },
                "last_attempt_at": {
                    "label": "마지막 시도",
                    "visible": true,
                    "sortable": true,
                    "format": "Y-m-d H:i:s",
                    "responsive": "md"
                },
                "blocked_at": {
                    "label": "차단 시간",
                    "visible": false,
                    "sortable": true,
                    "format": "Y-m-d H:i:s"
                },
                "actions": {
                    "label": "작업",
                    "visible": true,
                    "width": "150px"
                }
            }
        },
        "actions": {
            "unblock": {
                "label": "차단 해제",
                "icon": "unlock",
                "class": "text-green-600 hover:text-green-900",
                "confirmation": {
                    "title": "IP 차단 해제",
                    "message": "이 IP 주소의 차단을 해제하시겠습니까?",
                    "type": "warning"
                }
            },
            "bulkUnblock": {
                "label": "선택한 항목 차단 해제",
                "icon": "unlock",
                "class": "bg-green-600 hover:bg-green-700 text-white"
            }
        }
    },
    "show": {
        "heading": {
            "title": "비밀번호 로그 상세",
            "description": "비밀번호 시도 상세 정보를 확인합니다"
        },
        "enableEdit": false,
        "enableDelete": true,
        "enableCreate": false,
        "enableListButton": true,
        "enableSettingsDrawer": true,
        "enableUnblock": true,
        "showLayoutPath": "jiny-admin::template.livewire.admin-show",
        "showPath": "jiny-admin::admin.admin_password_logs.show",
        "sections": {
            "basic": {
                "title": "기본 정보",
                "fields": [
                    "email",
                    "ip_address",
                    "status",
                    "attempt_count"
                ]
            },
            "browser": {
                "title": "브라우저 정보",
                "fields": [
                    "browser",
                    "user_agent",
                    "device",
                    "platform"
                ]
            },
            "timestamps": {
                "title": "시간대",
                "fields": [
                    "first_attempt_at",
                    "last_attempt_at",
                    "blocked_at",
                    "resolved_at"
                ]
            },
            "resolution": {
                "title": "해결 세부 사항",
                "fields": [
                    "resolved_by",
                    "resolution_notes"
                ],
                "condition": "status == 'resolved'"
            }
        },
        "display": {
            "datetimeFormat": "Y-m-d H:i:s",
            "booleanLabels": {
                "true": "예",
                "false": "아니오"
            }
        }
    },
    "destroy": {
        "enableSoftDelete": false,
        "enableTransaction": true,
        "requireConfirmation": true,
        "confirmation": {
            "message": "이 비밀번호 로그 항목을 삭제하시겠습니까?"
        },
        "messages": {
            "success": "비밀번호 로그 항목이 삭제되었습니다.",
            "error": "비밀번호 로그 항목 삭제 중 오류가 발생했습니다: %s",
            "confirmRequired": "삭제 확인이 필요합니다."
        }
    },
    "messages": {
        "unblocked": "IP 주소 차단이 성공적으로 해제되었습니다.",
        "unblockFailed": "IP 주소 차단 해제에 실패했습니다.",
        "bulkUnblocked": "%d개의 IP 주소 차단이 해제되었습니다.",
        "deleted": "비밀번호 로그 항목이 성공적으로 삭제되었습니다.",
        "error": "요청을 처리하는 동안 오류가 발생했습니다."
    },
    "currentRoute": "admin.system.user.password.logs"
}