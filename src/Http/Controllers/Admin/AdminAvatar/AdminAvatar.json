{
    "title": "아바타 관리",
    "subtitle": "사용자 아바타 이미지를 관리합니다",
    "description": "사용자 아바타 이미지를 관리하는 시스템입니다. 이미지 업로드, 수정, 삭제 기능을 제공합니다.",
    "route": {
        "name": "admin.system.avatar",
        "prefix": "admin.system.avatar",
        "actions": {
            "index": "index",
            "create": "create",
            "store": "store",
            "show": "show",
            "edit": "edit",
            "update": "update",
            "destroy": "destroy"
        }
    },
    "table": {
        "name": "users",
        "model": "\\Jiny\\Admin\\Models\\User",
        "primaryKey": "id",
        "timestamps": true,
        "softDeletes": false,
        "fillable": [
            "name",
            "email",
            "password",
            "avatar",
            "isAdmin",
            "utype"
        ],
        "guarded": ["id", "created_at", "updated_at"],
        "hidden": ["password", "remember_token"],
        "where": {
            "default": [],
            "conditions": []
        },
        "casts": {
            "isAdmin": "boolean",
            "email_verified_at": "datetime",
            "created_at": "datetime:Y-m-d H:i:s",
            "updated_at": "datetime:Y-m-d H:i:s"
        }
    },
    "upload": {
        "path": "avatars",
        "disk": "public",
        "folderStrategy": "hash",
        "maxSize": 2048,
        "mimeTypes": ["image/jpeg", "image/png", "image/gif", "image/webp"],
        "deleteOldFile": true,
        "defaultImage": "/images/default-avatar.png"
    },
    "template": {
        "layout": "jiny-admin::layouts.admin",
        "index": "jiny-admin::template.index",
        "show": "jiny-admin::template.show",
        "create": "jiny-admin::template.create",
        "edit": "jiny-admin::template.edit"
    },
    "index": {
        "tableLayoutPath": "jiny-admin::template.livewire.admin-table",
        "tablePath": "jiny-admin::admin.admin_avatar.table",
        "searchLayoutPath": "jiny-admin::template.livewire.admin-search",
        "searchFormPath": "jiny-admin::admin.admin_avatar.search",
        "searchable": [
            "name",
            "email"
        ],
        "sortable": [
            "id",
            "name",
            "email",
            "isAdmin",
            "utype",
            "created_at",
            "updated_at"
        ],
        "filterable": [
            "isAdmin",
            "utype"
        ],
        "heading": {
            "title": "아바타 목록",
            "description": "사용자 아바타 이미지 관리"
        },
        "features": {
            "enableCreate": true,
            "enableDelete": true,
            "enableEdit": true,
            "enableSearch": true,
            "enableSort": true,
            "enablePagination": true,
            "enableBulkActions": true,
            "enableExport": false,
            "enableImport": false,
            "enableStatusToggle": true,
            "enableSettingsDrawer": true
        },
        "pagination": {
            "perPage": 20,
            "options": [10, 25, 50, 100]
        },
        "sorting": {
            "default": "created_at",
            "direction": "desc"
        },
        "search": {
            "placeholder": "사용자 검색...",
            "debounce": 300
        },
        "filters": {
            "isAdmin": {
                "label": "관리자 상태",
                "options": {
                    "": "전체",
                    "1": "관리자",
                    "0": "일반 사용자"
                }
            },
            "utype": {
                "label": "사용자 타입",
                "options": {
                    "": "전체"
                }
            }
        },
        "table": {
            "columns": {
                "checkbox": {
                    "visible": true,
                    "width": "50px"
                },
                "id": {
                    "label": "ID",
                    "visible": true,
                    "sortable": true,
                    "width": "80px"
                },
                "avatar": {
                    "label": "아바타",
                    "visible": true,
                    "type": "image",
                    "width": "80px",
                    "height": "80px",
                    "rounded": true,
                    "defaultImage": "/images/default-avatar.png"
                },
                "name": {
                    "label": "이름",
                    "visible": true,
                    "sortable": true,
                    "searchable": true
                },
                "email": {
                    "label": "이메일",
                    "visible": true,
                    "sortable": true,
                    "searchable": true
                },
                "isAdmin": {
                    "label": "관리자",
                    "visible": true,
                    "sortable": true,
                    "toggleable": true
                },
                "utype": {
                    "label": "사용자 타입",
                    "visible": true,
                    "sortable": true,
                    "responsive": "md",
                    "linkRoute": "admin.system.user.type"
                },
                "email_verified_at": {
                    "label": "인증됨",
                    "visible": true,
                    "responsive": "lg",
                    "format": "Y-m-d"
                },
                "created_at": {
                    "label": "생성일",
                    "visible": true,
                    "sortable": true,
                    "responsive": "md",
                    "format": "Y-m-d"
                },
                "actions": {
                    "label": "작업",
                    "visible": true,
                    "width": "150px"
                }
            }
        }
    },
    "create": {
        "heading": {
            "title": "새 아바타 업로드",
            "description": "사용자 아바타 이미지 업로드"
        },
        "createLayoutPath": "jiny-admin::template.livewire.admin-create",
        "formPath": "jiny-admin::admin.admin_avatar.create",
        "formLayout": "vertical",
        "buttonText": "새 사용자 추가",
        "enableContinueCreate": true,
        "enableListButton": true,
        "enableSettingsDrawer": true,
        "fields": {
            "name": {
                "label": "이름",
                "type": "text",
                "required": true,
                "placeholder": "사용자 이름을 입력하세요"
            },
            "email": {
                "label": "이메일",
                "type": "email",
                "required": true,
                "placeholder": "email@example.com"
            },
            "password": {
                "label": "비밀번호",
                "type": "password",
                "required": true,
                "minLength": 8
            },
            "avatar": {
                "label": "아바타 이미지",
                "type": "file",
                "accept": "image/*",
                "maxSize": 2048,
                "helpText": "최대 2MB, JPG/PNG/GIF 형식"
            },
            "isAdmin": {
                "label": "관리자 권한",
                "type": "checkbox",
                "default": false
            },
            "utype": {
                "label": "사용자 타입",
                "type": "select",
                "options": {},
                "placeholder": "타입 선택"
            }
        }
    },
    "edit": {
        "heading": {
            "title": "아바타 수정",
            "description": "아바타 이미지 변경"
        },
        "enableDelete": true,
        "enableListButton": true,
        "enableDetailButton": true,
        "enableSettingsDrawer": true,
        "editLayoutPath": "jiny-admin::template.livewire.admin-edit",
        "formPath": "jiny-admin::admin.admin_avatar.edit",
        "formLayout": "vertical",
        "fields": {
            "name": {
                "label": "이름",
                "type": "text",
                "required": true
            },
            "email": {
                "label": "이메일",
                "type": "email",
                "required": true
            },
            "password": {
                "label": "비밀번호 변경",
                "type": "password",
                "required": false,
                "placeholder": "변경할 경우만 입력",
                "minLength": 8
            },
            "avatar": {
                "label": "아바타 이미지 변경",
                "type": "file",
                "accept": "image/*",
                "maxSize": 2048,
                "required": false,
                "helpText": "새 이미지를 업로드하려면 선택하세요"
            },
            "isAdmin": {
                "label": "관리자 권한",
                "type": "checkbox"
            },
            "utype": {
                "label": "사용자 타입",
                "type": "select",
                "options": {}
            }
        }
    },
    "show": {
        "heading": {
            "title": "아바타 상세",
            "description": "아바타 정보 보기"
        },
        "showLayoutPath": "jiny-admin::template.livewire.admin-show",
        "showPath": "jiny-admin::admin.admin_avatar.show",
        "enableEdit": true,
        "enableDelete": true,
        "enableCreate": true,
        "enableListButton": true,
        "enableSettingsDrawer": true,
        "display": {
            "datetimeFormat": "Y-m-d H:i:s",
            "booleanLabels": {
                "true": "예",
                "false": "아니오"
            }
        }
    },
    "destroy": {
        "enableSoftDelete": false,
        "enableTransaction": true,
        "requireConfirmation": true,
        "confirmation": {
            "message": "이 사용자를 삭제하시겠습니까?"
        },
        "messages": {
            "success": "사용자가 삭제되었습니다.",
            "error": "사용자 삭제 중 오류가 발생했습니다: %s",
            "confirmRequired": "삭제 확인이 필요합니다."
        }
    },
    "store": {
        "enableTransaction": true,
        "defaults": {
            "isAdmin": false
        },
        "messages": {
            "success": "사용자가 생성되었습니다.",
            "error": "사용자 생성 중 오류가 발생했습니다.",
            "continueSuccess": "사용자가 생성되었습니다. 계속 추가할 수 있습니다."
        },
        "validation": {
            "rules": {
                "name": "required|string|max:255",
                "email": "required|email|unique:users,email",
                "password": "required|string|min:8|confirmed",
                "avatar": "nullable|image|max:2048",
                "isAdmin": "boolean",
                "utype": "nullable|string|exists:admin_user_types,code"
            },
            "messages": {
                "name.required": "이름은 필수입니다.",
                "email.required": "이메일은 필수입니다.",
                "email.unique": "이 이메일은 이미 등록되어 있습니다.",
                "password.required": "비밀번호는 필수입니다.",
                "password.min": "비밀번호는 최소 8자 이상이어야 합니다.",
                "avatar.image": "아바타는 이미지 파일이어야 합니다.",
                "avatar.max": "아바타 이미지는 2MB를 초과할 수 없습니다."
            }
        }
    },
    "update": {
        "enableTransaction": true,
        "trackChanges": true,
        "redirects": {
            "success": "show",
            "error": "edit"
        },
        "messages": {
            "success": "사용자가 수정되었습니다.",
            "error": "사용자 수정 중 오류가 발생했습니다."
        },
        "validation": {
            "rules": {
                "name": "required|string|max:255",
                "email": "required|email",
                "password": "nullable|string|min:8|confirmed",
                "avatar": "nullable|image|max:2048",
                "isAdmin": "boolean",
                "utype": "nullable|string|exists:admin_user_types,code"
            },
            "messages": {
                "name.required": "이름은 필수입니다.",
                "email.required": "이메일은 필수입니다.",
                "password.min": "비밀번호를 입력할 경우 최소 8자 이상이어야 합니다.",
                "avatar.image": "아바타는 이미지 파일이어야 합니다.",
                "avatar.max": "아바타 이미지는 2MB를 초과할 수 없습니다."
            }
        }
    }
}
