{
    "controllerClass": "\\Jiny\\Admin\\App\\Http\\Controllers\\Admin\\AdminSessions\\AdminSessions",
    "title": "사용자 세션 관리",
    "subtitle": "활성 세션 모니터링 및 관리",
    "description": "현재 로그인된 사용자 세션을 관리합니다.",
    "route": {
        "name": "admin.user.sessions",
        "prefix": "admin/user/sessions",
        "actions": {
            "index": "index",
            "show": "show",
            "terminate": "terminate"
        }
    },
    "table": {
        "name": "admin_user_sessions",
        "model": "\\Jiny\\Admin\\App\\Models\\AdminUserSession",
        "primaryKey": "id",
        "timestamps": true,
        "softDeletes": false,
        "where": {
            "default": [],
            "conditions": []
        },
        "casts": {
            "is_active": "boolean",
            "two_factor_used": "boolean",
            "last_activity": "datetime",
            "login_at": "datetime"
        }
    },
    "template": {
        "layout": "jiny-admin::layouts.admin",
        "index": "jiny-admin::template.index",
        "show": "jiny-admin::template.show"
    },
    "index": {
        "tableLayoutPath": "jiny-admin::template.livewire.admin-table",
        "tablePath": "jiny-admin::admin.admin_sessions.table",
        "searchLayoutPath": "jiny-admin::template.livewire.admin-search",
        "searchFormPath": "jiny-admin::admin.admin_sessions.search",
        "searchable": [
            "user.name",
            "user.email",
            "ip_address"
        ],
        "sortable": [
            "id",
            "user_id",
            "last_activity",
            "login_at"
        ],
        "filterable": [
            "is_active",
            "two_factor_used"
        ],
        "heading": {
            "title": "활성 세션 목록",
            "description": "현재 시스템에 로그인된 사용자 세션을 관리합니다"
        },
        "features": {
            "enableCreate": false,
            "enableDelete": false,
            "enableEdit": false,
            "enableSearch": true,
            "enableSort": true,
            "enablePagination": true,
            "enableBulkActions": true,
            "enableExport": false,
            "enableImport": false,
            "enableStatusToggle": false,
            "enableSettingsDrawer": true
        },
        "pagination": {
            "perPage": 10,
            "perPageOptions": [10, 20, 50, 100]
        },
        "sorting": {
            "default": "last_activity",
            "direction": "desc"
        },
        "search": {
            "placeholder": "세션 검색 (이름, 이메일, IP)...",
