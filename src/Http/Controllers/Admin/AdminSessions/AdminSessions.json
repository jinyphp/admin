        },
        "filters": {
            "is_active": {
                "label": "상태",
                "options": {
                    "": "전체",
                    "1": "활성",
                    "0": "비활성"
                }
            },
            "two_factor_used": {
                "label": "2FA",
                "options": {
                    "": "전체",
                    "1": "사용",
                    "0": "미사용"
                }
            }
        },
        "table": {
            "columns": {
                "checkbox": {
                    "visible": true,
                    "width": "50px"
                },
                "id": {
                    "label": "ID",
                    "visible": true,
                    "sortable": true,
                    "width": "60px"
                },
                "user": {
                    "label": "사용자",
                    "visible": true,
                    "sortable": true,
                    "searchable": true
                },
                "ip_address": {
                    "label": "IP 주소",
                    "visible": true,
                    "sortable": false,
                    "searchable": true
                },
                "browser": {
                    "label": "브라우저",
                    "visible": true,
                    "sortable": false
                },
                "platform": {
                    "label": "플랫폼",
                    "visible": true,
                    "sortable": false
                },
                "two_factor_used": {
                    "label": "2FA",
                    "visible": true,
                    "sortable": true
                },
                "login_at": {
                    "label": "로그인 시간",
                    "visible": true,
                    "sortable": true,
                    "format": "Y-m-d H:i"
                },
                "last_activity": {
                    "label": "마지막 활동",
                    "visible": true,
                    "sortable": true,
                    "format": "Y-m-d H:i"
                },
                "is_active": {
                    "label": "상태",
                    "visible": true,
                    "sortable": true
                },
                "actions": {
                    "label": "작업",
                    "visible": true,
                    "width": "100px"
                }
            }
        }
    },
    "show": {
        "heading": {
            "title": "세션 상세 정보",
            "description": "세션 상세 정보를 확인합니다"
        },
        "enableEdit": false,
        "enableDelete": true,
        "enableCreate": false,
        "enableListButton": true,
        "enableSettingsDrawer": false,
        "showLayoutPath": "jiny-admin::template.livewire.admin-show",
        "showPath": "jiny-admin::admin.admin_sessions.show",
        "display": {
            "datetimeFormat": "Y-m-d H:i:s",
            "booleanLabels": {
                "true": "활성",
                "false": "비활성"
            }
        }
    },
    "delete": {
        "enableTransaction": true,
        "requireConfirmation": true,
        "confirmation": {
            "title": "세션 종료",
            "message": "이 세션을 종료하시겠습니까?",
