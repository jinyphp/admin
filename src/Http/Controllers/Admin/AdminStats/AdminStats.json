{
    "controllerClass": "\\Jiny\\Admin\\App\\Http\\Controllers\\Admin\\AdminStats\\AdminStats",
    "title": "사용자 통계",
    "subtitle": "브라우저 및 기기 사용 분석",
    "description": "브라우저, 기기 및 사용자 활동 분석을 위한 종합 통계 대시보드입니다. 실시간 사용자 데이터를 시각적으로 표시합니다.",
    "route": {
        "name": "admin.system.user.stats",
        "prefix": "admin/user/stats"
    },
    "template": {
        "layout": "jiny-admin::layouts.admin",
        "index": "jiny-admin::admin.admin_stats.index"
    },
    "features": {
        "enableExport": true,
        "enableRefresh": true,
        "enableDateFilter": true,
        "enablePrint": true
    },
    "periods": {
        "default": "7days",
        "options": {
            "24hours": "최근 24시간",
            "7days": "최근 7일",
            "30days": "최근 30일",
            "90days": "최근 90일"
        }
    },
    "charts": {
        "browser_usage": {
            "type": "pie",
            "title": "브라우저 사용률",
            "colors": ["#4F46E5", "#10B981", "#F59E0B", "#EF4444", "#8B5CF6", "#EC4899"]
        },
        "operating_systems": {
            "type": "donut",
            "title": "운영체제",
            "colors": ["#0EA5E9", "#22C55E", "#A855F7", "#F97316", "#6366F1"]
        },
        "device_types": {
            "type": "bar",
            "title": "기기 유형",
            "colors": ["#3B82F6", "#10B981", "#F59E0B"]
        },
        "peak_usage": {
            "type": "line",
            "title": "최대 사용 시간대",
            "color": "#4F46E5"
        },
        "login_methods": {
            "type": "pie",
            "title": "로그인 방법",
            "colors": ["#3B82F6", "#10B981"]
        },
        "trends": {
            "type": "area",
            "title": "로그인 동향"
            "color": "#4F46E5"
        }
    },
    "display": {
        "grid": {
            "columns": "grid-cols-1 md:grid-cols-2 lg:grid-cols-4"
        },
        "cards": {
            "shadow": "shadow-sm",
            "rounded": "rounded-lg",
            "padding": "p-6"
        },
        "icons": {
            "browser": {
                "chrome": "🌐",
                "firefox": "🦊",
                "safari": "🧭",
                "edge": "🌊",
                "opera": "🎭",
                "unknown": "❓"
            },
            "device": {
                "desktop": "🖥️",
                "mobile": "📱",
                "tablet": "📱",
                "tv": "📺",
                "watch": "⌚",
                "unknown": "❓"
            },
            "os": {
                "windows": "🪟",
                "macos": "🍎",
                "linux": "🐧",
                "android": "🤖",
                "ios": "📱",
                "unknown": "❓"
            }
        }
    },
    "export": {
        "formats": ["csv", "excel", "pdf"],
        "filename": "user_statistics"
    },
    "refresh": {
        "interval": 60000,
        "auto": false
    }
}